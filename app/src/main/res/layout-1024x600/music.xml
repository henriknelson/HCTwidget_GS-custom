<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/music_bg" android:layout_width="212px" android:layout_height="320px">
        <FrameLayout android:layout_gravity="center_horizontal" android:layout_width="@dimen/widget_alumb" android:layout_height="@dimen/widget_alumb" android:layout_marginTop="39px">
            <ImageView android:id="@+id/musicalumb" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/music_alumb" android:scaleType="fitXY"/>
            <ImageView android:id="@+id/musiccicle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        </FrameLayout>
        <TextView android:textSize="20px" android:textColor="#fff8ff" android:ellipsize="marquee" android:gravity="center" android:id="@+id/musicname" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4px" android:singleLine="true" android:layout_marginStart="4px" android:layout_marginEnd="4px"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6px">
            <TextView android:textSize="15px" android:textColor="#ffffff" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/musiccurtime" android:layout_width="44px" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textSize="15px" android:textColor="#ffffff" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/musicdurtime" android:layout_width="44px" android:layout_height="wrap_content" android:layout_marginLeft="4px" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6px">
            <ImageView android:id="@+id/musicpre" android:layout_width="50px" android:layout_height="50px" android:src="@drawable/music_pre" android:scaleType="fitXY"/>
            <ImageView android:id="@+id/musicplay" android:layout_width="50px" android:layout_height="50px" android:src="@drawable/music_play" android:scaleType="fitXY" android:layout_marginStart="16px"/>
            <ImageView android:id="@+id/musicnext" android:layout_width="50px" android:layout_height="50px" android:src="@drawable/music_next" android:scaleType="fitXY" android:layout_marginStart="16px"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
